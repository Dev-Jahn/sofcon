<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:id="@+id/drawer_layout"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/maintoolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="227dp"
                android:layout_height="101dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/app_logo_origin" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/main_image_background"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:src="@drawable/city_tai"
                    app:civ_border_color="#000000"
                    app:civ_border_width="4dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"

                    />
                <Space
                    android:layout_width="wrap_content"
                    android:id="@+id/margin_spacer_main"
                    app:layout_constraintBottom_toBottomOf="@+id/main_image"
                    app:layout_constraintLeft_toLeftOf="@+id/main_image"
                    app:layout_constraintRight_toRightOf="@+id/main_image"
                    android:layout_height="wrap_content"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/main_image"
                    android:layout_width="320dp"
                    android:layout_height="320dp"
                    app:civ_border_width="4dp"
                    app:civ_border_color="#000000"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:src="@drawable/city_seoul"

                    />


            </android.support.constraint.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/newTrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#BDBDBD"
                android:text="새 여행" />




            <Button
                android:id="@+id/myTrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#BDBDBD"
                android:text="내 여행" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/otherTrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#BDBDBD"
                android:text="다른 여행" />




            <Button
                android:id="@+id/recommendTrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#BDBDBD"
                android:text="추천 여행" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>