<?xml version="1.0" encoding="utf-8"?>

<android.support.design.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/recommend_cardview"
    app:strokeColor="@color/colorAccentShade"
    app:strokeWidth="1dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/colorPrimaryLight"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/recommend_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:elevation="2dp"
            android:scaleType="fitCenter"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:id="@+id/linear_recommend"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recommend_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="40sp"
                android:fontFamily="@font/font_10x10"
                android:layout_marginTop="4dp"
                android:layout_marginStart="6dp"
                android:textColor="@color/colorPrimaryText"
                android:text="TextView" />

            <TextView
                android:id="@+id/recommend_content"
                android:layout_width="match_parent"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/font_oshm"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/colorSecondaryText"
                android:text="TextView" />
        </LinearLayout>

    </LinearLayout>

</android.support.design.card.MaterialCardView>