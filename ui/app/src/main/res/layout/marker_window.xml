<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/material_shadow">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Default_text"
        android:gravity="center"
        android:layout_alignLeft="@id/tvSnippet"
        android:layout_alignRight="@id/tvScore" />

    <TextView
        android:id="@+id/tvSnippet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default_snippet"
        android:layout_below="@id/tvTitle"
        android:textSize="16sp"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/tvScoreDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DefaultScore"
        android:layout_below="@id/tvTitle"
        android:layout_toRightOf="@id/tvSnippet"
        android:layout_marginLeft="8dp"
        android:textSize="16sp"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default_Score"
        android:layout_below="@id/tvTitle"
        android:layout_toRightOf="@id/tvScoreDescription"
        android:layout_margin="8dp"
        android:textSize="16sp"/>

    <ImageButton
        android:id="@+id/deleteImageButton"
        android:background="@drawable/baseline_delete_sweep_black_18dp"
        android:layout_alignRight="@id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvScore"/>

</RelativeLayout>